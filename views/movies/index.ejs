<!DOCTYPE html>
<html>
<head>
  <title>Movies</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
  <main class="container mt-5">
    <div class="pt-5 pb-5">
      <h1>Movies</h1>
      <p>Here are all our current movies.</p>

      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% movies.forEach(movie => { %>
            <tr>
              <td>
                <a href="/movies/<%= movie._id %>">
                  <%= movie.title %>
                </a>
              </td>
              <td><%= movie.description %></td>
              <td>
                <a href="/movies/<%= movie._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
              </td>
              <td>
                <a href="/movies/<%= movie._id %>/delete?_method=DELETE" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>

      <div class="mt-5 text-center">
        <a href="/movies/new" class="btn btn-primary">Add New Movie</a>
        <a href="/" class="btn btn-secondary ml-2" role="button" aria-disabled="true">Delete All Movies</a>
      </div>
    </div>
  </main>
</body>
</html>
